{
	"name": "snippets-view",
	"displayName": "Snippets View",
	"description": "View and insert configured inside vscode snippets",
	"version": "0.0.3",
	"publisher": "usernamehw",
	"license": "MIT",
	"engines": {
		"vscode": "^1.28.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/usernamehw/vscode-snippets-view"
	},
	"icon": "img/icon.png",
	"galleryBanner": {
		"theme": "dark",
		"color": "#333333"
	},
	"bugs": {
		"url": "https://github.com/usernamehw/vscode-snippets-view/issues"
	},
	"keywords": [
		"snippets",
		"snippet",
		"view",
		"search",
		"insert",
		"multi-root ready"
	],
	"categories": [
		"Snippets"
	],
	"activationEvents": [
		"onView:snippets-view.tree"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Snippets View",
			"properties": {
				"snippets-view.focusEditorAfterInsertion": {
					"type": "boolean",
					"default": true,
					"description": "TODO: write description"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "snippets-view",
					"icon": "./img/activity_bar_icon.svg",
					"title": "Snippets"
				}
			]
		},
		"views": {
			"snippets-view": [
				{
					"id": "snippets-view.tree",
					"name": "View"
				}
			]
		},
		"commands": [
			{
				"command": "snippets-view.tree.refresh",
				"title": "Refresh",
				"category": "Snippets View",
				"icon": {
					"light": "img/refresh-light.svg",
					"dark": "img/refresh-dark.svg"
				}
			},
			{
				"command": "snippets-view.openSnippetFile",
				"title": "Open Snippets File",
				"category": "Snippets View"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "snippets-view.tree.refresh",
					"when": "view == snippets-view.tree",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "snippets-view.openSnippetFile",
					"when": "view == snippets-view.tree && viewItem == snippetFile"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/json5": "0.0.30",
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.25",
		"tslint": "^5.8.0",
		"typescript": "^3.1.4",
		"vscode": "^1.1.25"
	},
	"dependencies": {
		"json5": "^2.1.0"
	}
}
